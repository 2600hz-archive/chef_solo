include_recipe "monitor::default"

cookbook_file "/etc/sensu/plugins/check-log.rb" do
  source "plugins/check-log.rb"
  mode 0755
end

sensu_check "check-freeswitch-dtls" do
  command "sudo check-log.rb --log-file /var/log/freeswitch/debug.log --pattern 'Handshake failure' --icase --warn-only"
  handlers ["default"]
  standalone true
  interval 60
  additional(:notification => "FreeSWITCH is having DTLS handshake errors")
end

