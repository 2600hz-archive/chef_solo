[admins]
<%= node.bigcouch.admin.username %> = <%= node.bigcouch.admin.include?('hashed_password') ? node.bigcouch.admin.hashed_password : node.bigcouch.admin.plaintext_password %>
<%= node.bigcouch.kazoo.username %> = <%= node.bigcouch.kazoo.include?('hashed_password') ? node.bigcouch.kazoo.hashed_password : node.bigcouch.kazoo.plaintext_password %>

[couch_httpd_auth]
secret = <%= node.bigcouch.salt %>
require_valid_user = true

[couchdb]
database_dir = <%= node.bigcouch.database_dir %>
view_index_dir = <%= node.bigcouch.view_index_dir %>

[cluster]
q=<%= node.bigcouch.cluster.q %>
r=<%= node.bigcouch.cluster.r %>
w=<%= node.bigcouch.cluster.w %>
n=<%= node.bigcouch.cluster.n %>

[chttpd]
port = 5984
backlog = 512
docroot = /opt/bigcouch/share/www
bind_address = 0.0.0.0

[httpd]
port = 5986
bind_address = 0.0.0.0

[log]
file = /var/log/bigcouch.log
