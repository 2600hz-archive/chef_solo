{default_couch_host,"localhost",5984,[],[]}.
<% if node.has_key?("cloud") %>
  <% if node[:cloud][:provider] == "synapseglobal" -%>
    {couch_host,"<%= node[:ipaddress] %>",<%= node[:couchdb_port] %>,"<%= node[:couchdb_username] %>","<%= node[:couchdb_plaintext_password] %>,5986"}.
  <% elsif node[:cloud][:provider] == "linode" %>
    {couch_host,"<%= node[:ipaddress] %>",<%= node[:couchdb_port] %>,"<%= node[:couchdb_username] %>","<%= node[:couchdb_plaintext_password] %>,5986"}.
  <% else -%>
    {couch_host,"<%= node[:cloud][:private_ips][0] %>",<%= node[:couchdb_port] %>,"<%= node[:couchdb_username] %>","<%= node[:couchdb_plaintext_password] %>,5986"}.
  <% end -%>
<% else %>
  {couch_host,"<%= node[:ipaddress] %>",<%= node[:couchdb_port] %>,"<%= node[:couchdb_username] %>","<%= node[:couchdb_plaintext_password] %>,5986"}.
<% end %>
